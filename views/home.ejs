<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogging Hub</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Blogging Hub</h1>
        <h2>Where stories come to life</h2>
    </header>

    <main>
        <div class="button-container">
            <a href="/new" class="btn create-post">âž• Create New Post</a>
        </div>
        <% if (posts.length === 0) { %>
            <p>No posts yet.</p>
        <% } else { %>
            <% posts.forEach((post) => { %>
                <article>
                    <hr/>
                    <h2><%= post.title %></h2>
                    <p><%= post.content.substring(0, 100) %>...</p>

                    <div class="post-buttons">
                        <!-- Read More -->
                        <a href="/post/<%= post.id %>" class="btn read-more">Read More</a>

                        <!-- Edit -->
                        <a href="/edit/<%= post.id %>" class="btn read-more">Edit</a>

                        <!-- Delete (Using method-override for DELETE request) -->
                        <form action="/delete/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this post?')" class="btn read-more">Delete</button>
                        </form>
                    </div>
                </article>
            <% }); %>
        <% } %>
    </main>
</body>
</html>
